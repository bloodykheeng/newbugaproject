      <th scope="col">customer last name</th>

      <th scope="col">technicians first name</th>
      
      <th scope="col">technicians last name</th>
      
    </tr>

  </thead>

  <tbody>

<% if(rows.length > 0){  
var id = 1;
  rows.forEach( (row) => {
  
%>
    <tr>
      <th scope="row"><%=  id %></th>
      
 <th scope="row"><%= row.datecreated%></th>
 
  <th scope="row"><%= row.branchname%></th>
      
<th scope="row"><%= row.sparename%></th>
