  table.addEventListener("click",(e)=>{
    var target = e.target
    if(target.getAttribute("type") == "number"){
  target.removeAttribute("readonly")
  
    }else{ 
      
 target.setAttribute("readonly","")
    }
  })
  
  
    
        var el = document.getElementById("wrapper");
